<?xml version="1.0"?>
<openerp>
    <data>
        <record id="travel_sale_order_form_view1" model="ir.ui.view">
            <field name="name">travel.sale.order.form.view1</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="travel_core.travel_sale_order_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='client_order_ref']" position="before">
                    <field name='voucher_logo' string="Voucher Logo"/>
                </xpath>
            </field>
        </record>
        <record id="travel_sale_order_line_form_view1" model="ir.ui.view">
            <field name="name">travel.sale.order.line.form.view1</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="travel_core.travel_sale_order_line_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_cost_id']" position="attributes">
                    <attribute name="domain">[('name', 'in', ['GBP', 'EUR', 'USD', 'CUC'])]</attribute>
                </xpath>
            </field>
        </record>
        <record id="travel_sale_order_search_view1" model="ir.ui.view">
            <field name="name">travel.sale.order.search.view1</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="travel_core.travel_sale_order_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lead_name']" position="after">
                    <field name="pax_ids" string="Pax name" filter_domain="[('pax_ids.name', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>
        <record id="travel_sale_order_line_form_view2" model="ir.ui.view">
            <field name="name">travel.sale.order.line.form.view2</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="travel_core.travel_sale_order_line_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="attributes">
                    <attribute name="options">{'no_create': '1', 'no_create_edit': '1'}</attribute>
                </xpath>
            </field>
        </record>

        <record id="cap_date_travel_sale_order_form_view_inherit" model="ir.ui.view">
            <field name="name">cap.date.travel.sale.order.form.view.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="travel_core.travel_sale_order_form_view"/>
            <field name="arch" type="xml">
                <field name="order_line" position="attributes">
                    <attribute name="context">{'date_order': date_order, 'end_date': end_date}</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>
