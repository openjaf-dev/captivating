<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="fix_database_form" model="ir.ui.view">
      <field name="name">fix.database.form</field>
      <field name="model">fix.database</field>
      <field name="arch" type="xml">
        <form string="Fix Database">
          <group>
            <field name="action" />
            <field name="partner_id" attrs="{'invisible': [('action', '!=', 'unique_partner')], 'required': [('action', '==', 'unique_partner')]}"/>
            <field name="partner_ids" attrs="{'invisible': [('action', '!=', 'unique_partner')]}"/>
            <field name="product_hotel_id" attrs="{'invisible': [('action', '!=', 'unique_product_hotel')], 'required': [('action', '==', 'unique_product_hotel')]}"/>
            <field name="product_hotel_ids" attrs="{'invisible': [('action', '!=', 'unique_product_hotel')]}"/>
            <field name="order_start_date" attrs="{'invisible': [('action', '!=', 'set_prices_for_sale')], 'required': [('action', '==', 'set_prices_for_sale')]}"/>
            <field name="order_end_date" attrs="{'invisible': [('action', '!=', 'set_prices_for_sale')], 'required': [('action', '==', 'set_prices_for_sale')]}"/>
          </group>
          <button name="execute_action" string="Execute" type="object"/>
        </form>
      </field>
    </record>

    <record id="fix_database_action" model="ir.actions.act_window">
      <field name="name">Fix Database</field>
      <field name="res_model">fix.database</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="fix_database_form"/>
      <field name="target">new</field>
    </record>

    <menuitem id="fix_database_menu" sequence="101" parent="base.menu_config" action="fix_database_action" />

  </data>
</openerp>
